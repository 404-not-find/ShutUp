<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.laughingstock.ritwick.shutup.MainActivity">

    <Switch
        android:text="@string/master_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
        android:id="@+id/masterswitch" android:onClick="MasterSwitchClicked"
        android:textColor="#2c4a59" android:checked="false"/>
    <TextView
        android:text="@string/pocket_mode_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/infoproximity"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium"
        android:textAlignment="center"
        android:layout_below="@+id/info" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_marginTop="46dp"
        android:textSize="14sp" android:textColor="#386074"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:id="@+id/info"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium"
        android:text="@string/intro_info"
        android:textAlignment="center"
        android:layout_below="@+id/masterswitch"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
        android:textColor="#2c4a59"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragmentcontainer" android:layout_centerVertical="true"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
        android:layout_below="@+id/masterswitch">

    </RelativeLayout>


</RelativeLayout>
