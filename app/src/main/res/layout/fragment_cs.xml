<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:clipToPadding="false"
    >

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@drawable/add_white"
        android:id="@+id/addschedulebutton"
        app:fabSize="normal"
        android:onClick="addschedulebuttonclicked"
        android:scaleType="fitCenter"
        app:backgroundTint="#FF8F00"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:elevation="7dp"
        app:useCompatPadding="true"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/schedulelistview"
        android:background="?android:attr/colorBackground"
        android:layout_alignParentTop="true"
        android:drawingCacheQuality="high"
        android:animateLayoutChanges="true"/>

    <TextView
        android:text="Start by tapping that floating button below"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listemptytext"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:textSize="24sp"
        android:textColor="@color/textColorPrimary"
        android:textAlignment="center"
        tools:layout_editor_absoluteY="273dp"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:layout_marginEnd="16sp"
        android:layout_marginStart="16sp"
        android:layout_centerVertical="true"
        android:paddingBottom="60sp"
        android:layout_centerInParent="true"/>

</RelativeLayout>